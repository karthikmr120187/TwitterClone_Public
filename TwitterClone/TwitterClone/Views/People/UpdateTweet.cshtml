@model TwitterClone.Models.PERSON

@{
    Layout = "~/Views/_LayoutPage.cshtml";
}


@using (Html.BeginForm("UpdateTweet", "People", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Update Tweet</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @foreach (var item in Model.TWEETs)
            {
                @Html.HiddenFor(model => item.tweet_id)
                <div class="col-md-10">
                    @Html.EditorFor(model => item.message, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.message, "", new { @class = "text-danger" })
                </div>
            }
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" name="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
