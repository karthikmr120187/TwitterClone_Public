@model TwitterClone.Models.PERSON
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Join my Twitter Clone </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style type="text/css">
        .signup-form {
            width: 340px;
            margin: 50px auto;
        }

            .signup-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

        .login-form h2 {
            margin: 0 0 15px;
        }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    @using (Html.BeginForm("SignUp", "SignUp"))
    {
        @Html.AntiForgeryToken()
        <div class="signup-form">
            <form method="post">
                <h3 class="text-center">Join my Twitter Clone</h3>
                <h2 class="text-center">Your Details</h2>
                <div class="form-group">
                    <input type="text" id="txtUserName" name="txtUserName" class="form-control" placeholder="Username" required="required">
                </div>
                <div class="form-group">
                    <input type="password" id="txtPwd" name="txtPwd"class="form-control" placeholder="Password" required="required">
                </div>
                <div class="form-group">
                    <input type="text" id="txtFullName" name="txtFullName" class="form-control" placeholder="FullName" required="required">
                </div>
                <div class="form-group">
                    <input type="text" id="txtEmail" name="txtEmail" class="form-control" placeholder="Email" required="required">
                </div>
                <div class="form-group">
                    <button type="submit" id="btnsubmit"  class="btn btn-primary btn-block">Sign Up</button>
                </div>
            </form>

        </div>



        if (Model != null)
        {
            <script language="text/javascript">

            $(function () {
                alert("Inserted" +@Model.user_id);
            });

            </script>



        }
    }

    </body>
</html>

